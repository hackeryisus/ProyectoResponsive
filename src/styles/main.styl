@import './normalize.css'
@import './reset.styl'
@import './content.styl'

$black = #333333
$white = #FAFAFA

body
  font-size 16px
  font-family 'Lato', sans-serif

.header
  background-color $black
  font-family 'Montserrat', sans-serif
  color $white
  height 64px
  width 100%
  position fixed
  top 0
  left 0
  z-index 10
  line-height 64px

  &--light
    background-color $white
    color $black

  &-mobile
    display flex
    justify-content space-between

  &-logo
    order 1
    margin-left 1rem

  &-btn-nav
    order 2
    border 0
    border-radius 5px
    background-color $black
    padding 0
    margin-right 1rem

  &-menu-nav
    background-color $black

  &-menu-list
    height 0
    overflow hidden
    transition height 300ms

    &--show
      height 320px

    &-item
      a
        text-decoration none
        color $white
        width 100%
        padding 1.5rem
        display block

.video-container
  position relative
  height 0
  padding 25%
  video, object, embed, iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%

@media (min-width 768px)
  .header
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-between
    height 80px
    transition all 300ms ease
    line-height 80px

    &-logo
      margin-left 2rem

    &-btn-nav
      display none

    &-menu-list
      height 80px

      &-item
        display inline-block

        a
          padding 0 1rem
