.content
  margin 64px 0 0 0

  &-features
    padding 0

  &-block
    padding 1em
    border-left 6px solid #dedede
    border-bottom 1px solid #dedede

    &-title
      font-family 'Montserrat', sans-serif

    &:hover
      background-color #dedede

    &:nth-child(1)
      border-left-color green
    &:nth-child(2)
      border-left-color red
    &:nth-child(3)
      border-left-color blue
    &:nth-child(4)
      border-left-color orange

  &-text

    &-image
      picture
        margin 0 auto
        img
          width 100%

@media (min-width: 786px)
  .content
    margin 80px 0 0 0

    &-features
      display flex
      justify-content space-between

    &-text

      &-image
        display flex
        picture
          order 1
          margin 1em
          width 40%
        p
          order 2
          width 60%
